<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mainBackground"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/placeholder_customer_name"
            android:textColor="@color/white"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/customer_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/placeholder_customer_address"
            android:textColor="@color/white"/>

        <LinearLayout
            android:id="@+id/action_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/customer_call_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_ripple_white"
                android:drawableTop="@drawable/ic_phone"
                android:text="@string/call"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/customer_email_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_ripple_white"
                android:drawableTop="@drawable/ic_message"
                android:text="@string/email"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/customer_map_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_ripple_white"
                android:drawableTop="@drawable/ic_checkpoint"
                android:text="@string/map"
                android:textColor="@color/white"/>

        </LinearLayout>

        <com.rd.PageIndicatorView
            android:id="@+id/page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            app:piv_animationType="worm"
            app:piv_dynamicCount="true"
            app:piv_padding="5dp"
            app:piv_radius="4dp"
            app:piv_selectedColor="@color/white"
            app:piv_unselectedColor="@color/white_transparent"/>

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_container"
        app:tabMode="fixed"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabs"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/tabs"
        android:background="@drawable/shadow_from_top"/>

</RelativeLayout>
