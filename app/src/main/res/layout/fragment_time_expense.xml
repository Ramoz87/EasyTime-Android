<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.example.paralect.easytime.views.StrangeNumberInputView
            android:id="@+id/time_exp_hours_view"
            style="@style/StrangeViewStyle"/>

        <TextView
            android:id="@+id/time_exp_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text=":"
            android:textSize="@dimen/strange_dots_text_size"/>

        <com.example.paralect.easytime.views.StrangeNumberInputView
            android:id="@+id/time_exp_minutes_view"
            style="@style/StrangeViewStyle"/>

    </LinearLayout>

    <com.example.paralect.easytime.views.KeypadEditorView
        android:id="@+id/keypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

</FrameLayout>